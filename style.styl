

table, td, th
	border: 1px solid #000

.tw-datepicker
	width: 200px
	position: absolute
	background: lightblue
	z-index: 1000
	display: none


	.tw-datepicker-year
		text-align: center

	.tw-datepicker-controls
		text-align: center

		.prev
			float: left
		.next
			float: right

		span
			display: block
			padding: 0 20px

	.tw-datepicker-calendar
		table
			width: 100%
			td, th
				padding: 0
				margin: 0
				text-align: center
				vertical-align: middle
			a
				display: block
				color: black
				text-decoration: none
				&.selected
					background lightcoral
				&.today
					background lightgreen

.tw-datepicker-wrap
	position: relative